{% extends "LGMAdministrationBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $("#list").DataTable();
        });
    </script>
{% endblock %}

{% block page_body %}
    <div class="box box-info box-solid">
        <div class="box-header with-border">
            <h3 class="box-title text-uppercase">Liste des groupes </h3>
            <span class="pull-right">
                <a href="{{ path('new_groupe') }}" class="btn btn-success text-uppercase"><i class="fa fa-plus"></i> Ajouter</a>
            </span>
        </div>

        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="list"  class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 246px;" aria-label="nom: activate to sort column descending" aria-sort="ascending">Nom</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="Indice de Production: activate to sort column ascending">Indice de Production</th>
                                     <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="Indice de Production: activate to sort column ascending">Membre</th>
                                    
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 154px;" aria-label="Actions: activate to sort column ascending">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for groupe in groupes %}
                                    <tr>
                                        <td>{{ groupe.nom }}</td>
                                        <td>{{ groupe.indiceproduction }}</td>
                                        
                                        <td>
                                            <ul>
                                                {% for u in groupe.users %}
                                                    <li>{{ u.nom }} {{ u.prenom }}</li>
                                                    {% endfor %}
                                            </ul>
                                        </td>

                                        
                                        <td>
                                            <a href="{{ path('edit_groupe', { 'token': groupe.token})}}" <i class="btn btn-info"><i class="fa fa-pencil"></i></a>


                                            <a href="{{ path('delete_groupe', { 'token': groupe.token}) }}" <i class="btn btn-danger"><i class="fa fa-eraser" aria-hidden="true"></i></a>

                                        </td>
                                    </tr>
                                {%endfor%}


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">Nom </th>
                                    <th rowspan="1" colspan="1">Indice de Production</th>
                                    <th rowspan="1" colspan="1">Membre</th>
                                   
                                    <th rowspan="1" colspan="1">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>

{% endblock %}
