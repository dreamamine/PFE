{% extends "LGMAdministrationBundle::layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $("#list").DataTable();
        });
    </script>
{% endblock %}

{% block page_body %}
    <div class="box box-info box-solid">
        <div class="box-header with-border">
            <h3 class="box-title text-uppercase">Liste des Chercheurs Juniors </h3>
            <span class="pull-right">
                <a href="{{ path('new_chercheurJunior') }}" class="btn btn-success text-uppercase"><i class="fa fa-plus"></i> Ajouter</a>
            </span>
        </div>

        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="list"  class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 246px;" aria-label="Qualité: activate to sort column descending" aria-sort="ascending">Qualité</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 246px;" aria-label="nom: activate to sort column descending" aria-sort="ascending">Nom</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="prenom: activate to sort column ascending">Prenom</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="Intitule Sujet: activate to sort column ascending">Intitue Sujet</th>

                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="prenom: activate to sort column ascending">Directeur</th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 301px;" aria-label="Intitule Sujet: activate to sort column ascending">Co-Directeur</th>

                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 154px;" aria-label="Actions: activate to sort column ascending">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for chercheur_Junior in chercheur_Juniors %}
                                    <tr>
                                        <td>{{ chercheur_Junior.qualite }}</td>
                                        <td>{{ chercheur_Junior.nom }}</td>
                                        <td>{{ chercheur_Junior.prenom }}</td>                       
                                        <td>{{ chercheur_Junior.intituleSujet }}</td>
                                        <td>{{ chercheur_Junior.encadrant }}</td>
                                        <td>{{ chercheur_Junior.coencadrant }}</td>

                                        <td>
                                            <a href="{{ path('edit_chercheurJunior', { 'token': chercheur_Junior.token})}}" <i class="btn btn-info"><i class="fa fa-pencil"></i></a>


                                            <a href="{{ path('delete_chercheurJunior', { 'token': chercheur_Junior.token}) }}" <i class="btn btn-danger"><i class="fa fa-eraser" aria-hidden="true"></i></a>

                                        </td>
                                    </tr>
                                {%endfor%}


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">Qualité </th>
                                    <th>Nom </th>
                                    <th>Prenom </th>
                                    <th>IntituleSujet </th> 
                                    <th>Directeur </th>
                                    <th>Co-directeur </th> 

                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </div>

{% endblock %}
