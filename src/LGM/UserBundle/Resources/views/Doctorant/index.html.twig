{% block page_body %}
    
      
    <div class="row">
        <div class="col-xs-12">
      
                     
     <div class="box">
            <div class="box-header">
              <h3 class="box-title">Liste des Doctorants</h3>
            </div>
            <!-- /.box-header -->
